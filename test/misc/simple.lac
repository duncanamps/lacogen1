%title          = "LaCoGen Minimal Test";
%version        = "0.5";
%author         = "Duncan Munro";
%codeprefix     = "MIN";
%start          = <Content>;


// ====================================================================
// Character Sets
// ====================================================================

{Alpha}			= [a-z];
{Digit}			= [0-9];
{HexDigit}		= {Digit} + [a-f];
{WS Char}   	= [\t\n\r] + [ ];


// ====================================================================
// Terminals
// ====================================================================

done		= "done"		keyword ;
donkey		= "donkey"		keyword ;
id			= {Alpha}+;
hex			= "$" {HexDigit}+;
whitespace 	= {WS Char}+	ignore;


// ====================================================================
// Rules
// ====================================================================

// High level rules

<Content>	: done 
			| donkey
			| id
			| hex
			;
