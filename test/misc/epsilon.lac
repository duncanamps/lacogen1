%title          = "LaCoGen Test Epsilons";
%version        = "0.5";
%author         = "Duncan Munro";
%codeprefix     = "EPS";
%start          = <Content>;


// ====================================================================
// Predefined Character sets
// ====================================================================

// {Alphanumeric}  = [0-9A-Za-z];
{WS Char}		= [\t\n\r ];


// ====================================================================
// Terminals
// ====================================================================

crash		= "crash"		keyword ;
bang		= "bang"		keyword ;
wallop		= "wallop"		keyword ;
end			= "end"			keyword ;
whitespace 	= {WS Char}+	ignore;


// ====================================================================
// Rules
// ====================================================================

// High level rules

<Content>	: <Command> end 
			;

<Command>	: crash
			| bang
			| wallop
			|			// Epsilon
			;
