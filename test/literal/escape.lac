%title          = "LaCoGen Grammar";
%version        = "0.5";
%author         = "Duncan Munro";
%codeprefix     = "LCG";
%start          = <Content>;


// ====================================================================
// Predefined Character sets
// ====================================================================

{Alphanumeric}  = [0-9A-Za-z];
{WSChar}		= [\t\n\r \xa0];


// ====================================================================
// Character sets
// ====================================================================

{Escape}		= [\\];
{EscapedChar}	= [tnr];

 
// ====================================================================
// Terminals
// ====================================================================

Terminal		= ({Alphanumeric} | {Escape} {EscapedChar})+;
WhiteSpace		= {WSChar}+ ignore;


// ====================================================================
// Rules
// ====================================================================

// High level rules

<Content>			: Terminal ;
