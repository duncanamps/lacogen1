%title          = "LaCoGen Mixed Case Test";
%version        = "1.0";
%author         = "Duncan Munro";
%start          = <Content>;


// ====================================================================
// Character Sets
// ====================================================================

{WS Char}   	= [\t\n\r] + [ ];


// ====================================================================
// Terminals
// ====================================================================

OP_EOR		= MIXED("EOR")	keyword;
OP_LDA		= MIXED("LDA")	keyword;
OP_STA		= MIXED("STA")	keyword;
done		= "done"		keyword ;
donkey		= "donkey"		keyword ;
whitespace 	= {WS Char}+	ignore;


// ====================================================================
// Rules
// ====================================================================

// High level rules

<Content>	: done 
			| donkey
			| OP_EOR
			| OP_LDA
			| OP_STA
			;
